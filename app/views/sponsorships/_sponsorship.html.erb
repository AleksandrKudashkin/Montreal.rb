<div class="sponsorship markdown-body">
  <div class="row">
    <div class="col-md-3">
      <% if sponsorship.organization.logo.present? %>
        <%= link_to image_tag(sponsorship.organization.logo.thumbnail.url, alt: sponsorship.organization.name), organization_path(sponsorship.organization) %>
      <% end %>
    </div>
    <div class="col-sm-9">
      <div class='meta'>
        <%= link_to sponsorship.organization.name, organization_path(sponsorship.organization) %>
      </div>
      <%= render_markdown_as_html sponsorship.message %>
    </div>
  </div>
</div>
