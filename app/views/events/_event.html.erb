<div class="event">
  <h2 class="event-title"><%= link_to event.title.titleize, event %></h1>
  <div class="event-meta">
    <p><%= icon 'calendar-o', class: 'fa-fw' %><%= event.starts_at.strftime('%B %e, %Y  -  %k:%M') %></p>
    <p><%= icon 'map-marker', class: 'fa-fw' %><%= event.location.name %>, <a href="https://www.google.ca/maps/search/<%= event.location.address %>", target='_blank'><%= event.location.address %></a></p>
  </div>
  <div class="event-body">
    <%= render_markdown_as_html(event.body)%>
    <% if event.talks.any? %>
      <h3>Talks</h3>
      <div class="talk">
        <% event.talks.each do |talk| %>
          <h4><%= talk.title %>, by <%= talk.member.name %></h4>
          <div class="row">
            <div class="col-sm-2">
              <img src="<%= talk.member.picture || image_path("default_member") %>" width=100% />
            </div>
            <div class="col-xs-12 col-sm-10">
              <%= render_markdown_as_html talk.description %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
