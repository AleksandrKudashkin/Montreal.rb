<div class="card">
  <h1><%= link_to event.title.titleize, event %></h1>
  <div class="event-meta">
    <p><%= icon 'calendar-o', class: 'fa-fw' %><%= event.starts_at.strftime('%B %e, %Y  -  %k:%M') %></p>
    <p><%= icon 'map-marker', class: 'fa-fw' %><%= event.location.name %>, <a href="https://www.google.ca/maps/search/<%= event.location.address %>", target='_blank'><%= event.location.address %></a></p>
  </div>
  <div class="markdown-body">
    <%= render_markdown_as_html event.body %>
    <% if event.talks.any? %>
      <h3>Talks</h3>
      <%= render event.talks %>
    <% end %>
    <% if event.sponsors.present? %>
      <h3>Brought to you by our sponsors: </h3>
      <%# ------ Need to put this into _sponsors partial %>
      <% event.sponsors.each do |sponsor| %>
        <div class="sponsor">
          <h4>
            <%= link_to sponsor.name, organization_path(sponsor) %>
            <% if sponsor.logo.present? %>
              <%= link_to image_tag(sponsor.logo.thumbnail.url, alt: sponsor.name), organization_path(sponsor), class: "pull-right" %>
            <% end %>
          </h4>
        </div>
      <% end %>
      <%# ------ end %>
    <% end %>
  </div>
</div>
